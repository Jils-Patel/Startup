@model IEnumerable<RateMyTechship.Models.Internships>

@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole("Admin"))
{
    <p style="margin-top: 40px;">
        <a asp-action="Create" style="padding: 10px 20px; margin-top: 40px; background-color: orange; color: black; font-size: 20px; font-family: 'Roboto', sans-serif; border-radius: 10px;">Create New</a>
    </p>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="ShowInternships">
            <div class="form-group" style="margin-bottom: 20px;">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" placeholder="Search for any company, position, location, or term"/>
            </div>
            <div class="form-group d-flex align-items-center justify-content-between">
                <input type="submit" value="Search" class="btn btn-primary" style="color: black; font-weight: bold; background-color: orange; border: none; outline: none;" />
            </div>
        </form>
    </div>
</div>

