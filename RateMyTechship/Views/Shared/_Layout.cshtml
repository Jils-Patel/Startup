    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white" style="min-height: 75px;">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bold; font-family: Arial Bold, Arial, sans-serif; font-size: 30px;">
                        <span style="color: black; font-weight: bold;">RateMy</span><span style="color: orange; font-weight: bold;">Techship</span>
                    </a>
                </div>
                <div>
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Index" style="color: #777; font-weight: bold; font-family: Arial Bold, Arial, sans-serif; font-size: 25px; border: none;">Home</a>
                    <a class="btn btn-outline-primary" href="/Home#about-us" style="color: #777; font-weight: bold; font-family: Arial Bold, Arial, sans-serif; font-size: 25px; border: none;">About</a>
                    <a class="btn btn-outline-primary" href="/Home#contact" style="color: #777; font-weight: bold; font-family: Arial Bold, Arial, sans-serif; font-size: 25px; border: none;">Contact</a>
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="Blogs" asp-action="Index" style="color: #777; font-weight: bold; font-family: Arial Bold, Arial, sans-serif; font-size: 25px; border: none;">Blog</a>
                </div>
