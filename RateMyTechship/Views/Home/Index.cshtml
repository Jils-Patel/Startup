@model IEnumerable<RateMyTechship.Models.Review>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .shade2 {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("/image/office.jpeg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        color: white;
        /* Set height to 100vh for full viewport height */
        height: auto;
        padding-bottom: 30vh; /* Add padding to the bottom */
    }

    .body-container {
        /*remove the container default padding attribute*/
        padding-left: 0px !important;
        padding-right: 0px !important;
        /*increase width as per your need*/
        max-width: 100%;
        /* Set max-height to 100% to allow the container to expand with its content */
        max-height: 100%;
    }
</style>



<div class="full-width shade2">
    <div class="text-center body-container">
        <h1 class="display-4" style="margin-bottom: 30px; font-weight: bold;">Your Ultimate Destination For Internship Experiences!</h1>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form asp-action="ShowSearchResults" asp-controller="Reviews">
                        <div class="form-group mb-0">
                            <label for="SearchPhrase" class="control-label"></label>
                            <input name="SearchPhrase" class="form-control" style="height: 50px;" placeholder="Search for a company or position here" />
                            <p class="mb-0"><a asp-controller="Reviews" asp-action="Index" style="color: white; text-decoration: none;">View All Reviews</a></p>
                        </div>
                        <div class="form-group mb-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <input style="font-size: 22px; background-color: orange; color: black; font-weight: bold; border: black;" type="submit" value="Search" class="btn btn-primary" />
                                <div></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

