<div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-2">
        <section>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    // <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    //     <div>
                    //         <p style="text-align: center;">
                    //             @foreach (var provider in Model.ExternalLogins!)
                    //             {
                    //                 <button style="font-size: 20px; font-weight: bold; border-radius: 10px; margin-top: 15px; background-color: orange; border: none; outline: none;" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Sign in using your @provider.DisplayName account">
                    //                     <i class="fab fa-google" style="margin-right: 5px;"></i> Sign in with Google
                    //                 </button>
                    //             }
                    //         </p>
                    //     </div>
                    // </form>
                    <div class="container mb-5">
                        <div class="box-container" style="margin-bottom: 120px;">
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <h3 class="text-center font-weight-bold">Sign in</h3>
                                <div class="d-flex justify-content-center align-items-center flex-wrap">
                                    <p class="mb-0 mr-2" style="text-align: center; font-size: 20px; margin-bottom: 5px;">Create an account to access additional features!</p>
                                    
                                </div>
                                <div class="text-center mt-4">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-primary font-weight-bold" style="font-size: 20px; border-radius: 10px; margin-top: 2px; margin-bottom: 5px; background-color: orange; border: none; outline: none;" name="provider" value="@provider.Name" title="Sign in using your @provider.DisplayName account">
                                            <i class="fab fa-google mr-2"></i> Sign in with Google
                                        </button>
                                    }
                                </div>
                                <div class="row text-center mt-4">
                                    <div class="col-md-4">
                                        <img src="~/image/thumbs.png" alt="Thumbs Up" class="img-fluid" />
                                        <p class="font-weight-bold" style="font-size: 18px;">React to reviews!</p>
                                    </div>
                                    <div class="col-md-4">
                                        <img src="~/image/pencil.png" alt="Pencil" class="img-fluid" />
                                        <p class="font-weight-bold" style="font-size: 18px;">Edit your own reviews!</p>
                                    </div>
                                    <div class="col-md-4">
                                        <img src="~/image/question.png" alt="Question Mark" class="img-fluid" />
                                        <p class="font-weight-bold" style="font-size: 18px;">Stay anonymous!</p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>




                }
            }
        </section>
    </div>
</div>

<style>
    .box-container {
        border: 2px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin: 20px auto;
        max-width: 800px;
        background-color: white;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

</style>

