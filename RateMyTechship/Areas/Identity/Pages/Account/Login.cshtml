<div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-2">
        <section>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    // <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    //     <div>
                    //         <p style="text-align: center;">
                    //             @foreach (var provider in Model.ExternalLogins!)
                    //             {
                    //                 <button style="font-size: 20px; font-weight: bold; border-radius: 10px; margin-top: 15px; background-color: orange; border: none; outline: none;" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Sign in using your @provider.DisplayName account">
                    //                     <i class="fab fa-google" style="margin-right: 5px;"></i> Sign in with Google
                    //                 </button>
                    //             }
                    //         </p>
                    //     </div>
                    // </form>
                    <div class="container">
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <h3 style="text-align: center; font-weight: bold;">Sign in</h3>
                            <div class="d-flex justify-content-center align-items-center">
                                <p style="margin: 0;">You will need to create an account. Please</p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button style="text-decoration: underline; color: orange; background: none; border: none; padding: 0; font-size: inherit; cursor: pointer; margin-left: 5px;" type="submit" class="btn btn-link" name="provider" value="@provider.Name" title="Sign in using your @provider.DisplayName account">
                                        sign in.
                                    </button>
                                }
                            </div>

                            <div class="row text-center mt-4">
                                <div class="col-md-4">
                                    <img src="image/thumbs.png" alt="Thumbs Up" class="img-fluid" />
                                    <p>Create an account to like or dislike</p>
                                </div>
                                <div class="col-md-4">
                                    <img src="image/question.png" alt="Question Mark" class="img-fluid" />
                                    <p>Anonymous reviews</p>
                                </div>
                                <div class="col-md-4">
                                    <img src="image/thumbs.png" class="img-fluid" alt="Image Description" />
                                    <p>Edit your reviews</p>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button style="font-size: 20px; font-weight: bold; border-radius: 10px; margin-top: 15px; background-color: orange; border: none; outline: none;" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Sign in using your @provider.DisplayName account">
                                        <i class="fab fa-google" style="margin-right: 5px;"></i> Sign in with Google
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
            }
        </section>
    </div>
</div>



